{% extends "base.twig" %}

{% block title %}Bericht{% endblock %}

{% block content %}
  <div class="wrapper">
    <section>
      <h1>Bericht vom {{examDate}}</h1>
      {% if isAdmin %}<a href="/app/admin/user/{{exam.UserId}}"><i class="material-icons">person</i> von {{exam.User.email}}</a><br><br>{% endif %}
      <a href="{{exam.id}}/pdf" class="btn"><i class="material-icons">save</i> als PDF speichern</a>
      {% if user.id == exam.UserId or isAdmin %}<a href="{{exam.id}}/edit" class="btn important"><i class="material-icons">edit</i> bearbeiten</a>{% endif %}
      {% if user.id == exam.UserId or isAdmin %}<a href="{{exam.id}}/delete" class="btn important" onclick="return confirm('Diesen Bericht wirklich löschen?')"><i class="material-icons">delete</i> löschen</a>{% endif %}
      <h4>{{exam.ExamLocation.name}}</h4>
      <h4>Note: {{exam.grade}}</h4>
      <p>{{exam.comment}}</p>
      {% for report in exam.SubjectExams %}
        <div class="card" style="margin-bottom: 16px">
          <h3>{{report.Subject.name}}</h3>
          <h5>{{report.Examiner.name}}</h5>
          {{report.report | nl2br}}
        </div>
      {% endfor %}
    </section>
  </div>
{% endblock %}