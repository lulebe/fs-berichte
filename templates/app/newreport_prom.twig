{% extends "app/appbase.twig" %}

{% block title %}Eintragen{% endblock %}

{% block content %}
  <div class="wrapper narrow">
    <section>
      <h1>Arbeitsgruppenbericht anlegen</h1>
      <p style="color: red"><strong>Bitte formuliert eure Kritik sachlich und respektvoll!</strong></p>
      <form action="" method="POST">
        <div class="card mb">
          <h3>Allgemeines</h3><br>
          <div class="inputlabel">
            <label>*Veröffentlichen am:</label>
            <input type="date" name="publishDate" required value="{{currentDate}}" min="{{currentDate}}">
          </div><br>
          <div class="inputlabel">
            <label>*Fachrichtung</label>
            <input type="text" name="subject" placeholder="Neurophysiologie" required minlength="3">
          </div><br>
          <div class="inputlabel">
            <label>*Doktorvater/-mutter / Chef</label>
            <input type="text" name="head" placeholder="Joachim Kirsch" required minlength="3">
            <small>Bitte keine Titel angeben, da sich diese häufig ändern.</small>
          </div><br>
          <div class="inputlabel">
            <label>*Betreuer:in</label>
            <input type="text" name="supervisor" placeholder="Tom Müller" required minlength="3">
            <small>Bitte keine Titel angeben, da sich diese häufig ändern.</small>
          </div><br>
          <div class="inputquestion">*In welchem Bereich warst du?</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="area" id="iarea1" value="1" required><label class="check" for="iarea1">Grundlagenforschung</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="area" id="iarea2" value="2" required><label class="check" for="iarea2">klinisch-experimentell</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="area" id="iarea3" value="3" required><label class="check" for="iarea3">klinisch</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="area" id="iarea4" value="4" required><label class="check" for="iarea4">Literatur</label></div>
          </div>
          <div class="inputquestion">*Was ist dein Fazit?</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="rating" id="irating1" value="1" required><label class="check" for="irating1">Empfehlenswert</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="rating" id="irating2" value="2" required><label class="check" for="irating2">Akzeptabel</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="rating" id="irating3" value="3" required><label class="check" for="irating3">Fragwürdig</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="rating" id="irating4" value="4" required><label class="check" for="irating4">Schlecht</label></div>
          </div>
        </div>
        <div class="card mb" >
          <h3>Umfang</h3><br>
          <div class="inputquestion">*Art der Arbeit</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="work" id="iwork1" value="1" required><label class="check" for="iwork1">Doktorarbeit</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="work" id="iwork2" value="2" required><label class="check" for="iwork2">Praktikum</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="work" id="iwork3" value="3" required><label class="check" for="iwork3">HiWi-Job</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="work" id="iwork4" value="4" required><label class="check" for="iwork4">sonstiges</label></div>
          </div>
          <div class="inputquestion">*Wie lange warst du (in Vollzeit) dort?</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="duration" id="iduration1" value="1" required><label class="check" for="iduration1">unter 4 Monate</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="duration" id="iduration2" value="2" required><label class="check" for="iduration2">unter 9 Monate</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="duration" id="iduration3" value="3" required><label class="check" for="iduration3">unter 1,5 Jahre</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="duration" id="iduration4" value="4" required><label class="check" for="iduration4">über 1,5 Jahre</label></div>
          </div>
          <div class="inputlabel">
            <label>Anmerkungen</label>
            <input type="text" name="timetext" placeholder="Vollzeit/Teilzeitverhältnis etc.">
          </div><br>
        </div>
        <div class="card mb" >
          <h3>Team</h3><br>
          <div class="inputquestion">Gibt es ...?</div>
          <div class="radiorow">
            <div class="grouper"><input type="checkbox" class="lbl" name="teamjournalclub" id="iteamjournalclub" value="true"><label class="check" for="iteamjournalclub">Journal Clubs</label></div>
            <div class="grouper"><input type="checkbox" class="lbl" name="teamlabmeeting" id="iteamlabmeeting" value="true"><label class="check" for="iteamlabmeeting">Lab/Team meetings</label></div>
            <div class="grouper"><input type="checkbox" class="lbl" name="teamjointwork" id="iteamjointwork" value="true"><label class="check" for="iteamjointwork">Zusammenarbeit bei Problemen etc.</label></div>
          </div>
          <div class="inputlabel">
            <label>Gab es weitere Veranstaltungen, wie sah die Zusammenarbeit aus?</label>
            <textarea name="teamtext" class="short usertext"></textarea>
          </div>
        </div>
        <div class="card mb" >
          <h3>Planung</h3><br>
          <div class="inputquestion">Wie gut war die Planung und deren Umsetzung?</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="plan" id="iplan1" value="1"><label class="check" for="iplan1">sehr gut</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="plan" id="iplan2" value="2"><label class="check" for="iplan2">in Ordnung</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="plan" id="iplan3" value="3"><label class="check" for="iplan3">mäßig</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="plan" id="iplan4" value="4"><label class="check" for="iplan4">schlecht</label></div>
          </div>
          <div class="inputlabel">
            <label>Anmerkungen zur Planung und Einhaltung</label>
            <textarea name="plantext" class="short usertext"></textarea>
          </div>
        </div>
        <div class="card mb" >
          <h3>Betreuung</h3><br>
          <div class="inputquestion">Wie gut war die Einarbeitung?</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="intro" id="iintro1" value="1"><label class="check" for="iintro1">sehr gut</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="intro" id="iintro2" value="2"><label class="check" for="iintro2">in Ordnung</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="intro" id="iintro3" value="3"><label class="check" for="iintro3">mäßig</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="intro" id="iintro4" value="4"><label class="check" for="iintro4">schlecht</label></div>
          </div>
          <div class="inputquestion">Wie gut war die Betreuung bei Problemen?</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="help" id="ihelp1" value="1"><label class="check" for="ihelp1">sehr gut</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="help" id="ihelp2" value="2"><label class="check" for="ihelp2">in Ordnung</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="help" id="ihelp3" value="3"><label class="check" for="ihelp3">mäßig</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="help" id="ihelp4" value="4"><label class="check" for="ihelp4">schlecht</label></div>
          </div>
          <div class="inputlabel">
            <label>Anmerkungen zur Einarbeitung und Betreuung</label>
            <textarea name="helptext" class="short usertext"></textarea>
          </div>
        </div>
        <div class="card mb" >
          <h3>Aufgaben</h3><br>
          <div class="inputlabel">
            <label>Welche täglichen Aufgaben hattest du?</label>
            <textarea name="taskstext" class="short usertext"></textarea>
          </div><br>
          <div class="inputquestion">Hattest du Schwierigkeiten, einen Platz an deinem Mikroskop/Computer/Gerät... zu bekommen oder fehlte wichtige Ausstattung?</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="equipment" id="iequipment1" value="1"><label class="check" for="iequipment1">nie</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="equipment" id="iequipment2" value="2"><label class="check" for="iequipment2">selten</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="equipment" id="iequipment3" value="3"><label class="check" for="iequipment3">öfters</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="equipment" id="iequipment4" value="4"><label class="check" for="iequipment4">immer</label></div>
          </div>
        </div>
        <div class="card mb" >
          <h3>Förderung</h3><br>
          <div class="inputquestion">Gibt es ...?</div>
          <div class="radiorow">
            <div class="grouper"><input type="checkbox" class="lbl" name="supportcash" id="isupportcash" value="true"><label class="check" for="isupportcash">Bezahlung</label></div>
            <div class="grouper"><input type="checkbox" class="lbl" name="supportstipendium" id="isupportstipendium" value="true"><label class="check" for="isupportstipendium">Möglichkeiten für Stipendien</label></div>
            <div class="grouper"><input type="checkbox" class="lbl" name="supportpublications" id="isupportpublications" value="true"><label class="check" for="isupportpublications">gute Publikationsmöglichkeiten</label></div>
            <div class="grouper"><input type="checkbox" class="lbl" name="supportkongress" id="isupportkongress" value="true"><label class="check" for="isupportkongress">Angebote für Kongresse etc.</label></div>
          </div>
          <input type="text" name="supporttext" id="isupporttext" placeholder="Anmerkungen">
        </div>
        <div class="card mb" >
          <h3>Sonstiges</h3><br>
          <div class="inputquestion">Wie aufwändig war deine Arbeit?</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="level" id="ilevel1" value="1"><label class="check" for="ilevel1">einfach</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="level" id="ilevel2" value="2"><label class="check" for="ilevel2">mittel</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="level" id="ilevel3" value="3"><label class="check" for="ilevel3">anspruchsvoll</label></div>
          </div>
          <div class="inputquestion">Wie frei / geleitet warst du?</div>
          <div class="radiorow">
            <div class="grouper"><input type="radio" class="lbl" name="freedom" id="ifreedom1" value="1"><label class="check" for="ifreedom1">stark geleitet</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="freedom" id="ifreedom2" value="2"><label class="check" for="ifreedom2">eher geleitet</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="freedom" id="ifreedom3" value="3"><label class="check" for="ifreedom3">eher frei</label></div>
            <div class="grouper"><input type="radio" class="lbl" name="freedom" id="ifreedom4" value="4"><label class="check" for="ifreedom4">sehr frei</label></div>
          </div>
          <div class="inputlabel">
            <label>Was möchtest du sonst noch loswerden?</label>
            <textarea name="othertext" class="short usertext"></textarea>
          </div>
        </div>
        <button type="submit" class="fullpagesubmit">eintragen</button>
      </form>
    </section>
    <div style="height: 64px">&nbsp;</div>
  </div>
{% endblock %}

{% block js %}
<script type="text/javascript">
</script>
{% endblock %}