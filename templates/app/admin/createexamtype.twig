{% extends "app/admin/base.twig" %}

{% block admincontent %}
  <h1 class="mtop0">Prüfungsart anlegen</h1>
  <form method="POST">
    <div class="inputlabel">
      <label for="examtypenameinput">Prüfungsname</label>
      <input type="text" required maxlength="50" name="examtypename" id="examtypenameinput" placeholder="Name">
    </div>
    <br>
    <small>Fächeranzahl</small>
    <div class="radiorow">
      <div class="grouper">
        <label for="examtypesubjectcountinput1">1</label>
        <input type="radio" required name="examtypesubjectcount" id="examtypesubjectcountinput1" value="1">
      </div>
      <div class="grouper">
        <label for="examtypesubjectcountinput2">2</label>
        <input type="radio" required name="examtypesubjectcount" id="examtypesubjectcountinput2" value="2">
      </div>
      <div class="grouper">
        <label for="examtypesubjectcountinput3">3</label>
        <input type="radio" required name="examtypesubjectcount" id="examtypesubjectcountinput3" value="3" checked>
      </div>
      <div class="grouper">
        <label for="examtypesubjectcountinput4">4</label>
        <input type="radio" required name="examtypesubjectcount" id="examtypesubjectcountinput4" value="4">
      </div>
      <div class="grouper">
        <label for="examtypesubjectcountinput5">5</label>
        <input type="radio" required name="examtypesubjectcount" id="examtypesubjectcountinput5" value="5">
      </div>
    </div>
    <br><br>
    <input type="submit" value="anlegen">
  </form>
{% endblock %}

