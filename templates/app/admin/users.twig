{% extends "app/admin/adminuserbase.twig" %}

{% block admincontent %}
  <h1 class="mtop0">Nutzer</h1>
  <form method="get">
    <div class="search-block">
      <div class="inputlabel">
        <label for="usersearchinput">Nutzersuche</label>
        <input type="search" name="searchUser" id="usersearchinput" value="{{searchQuery}}" placeholder="E-Mailadresse">
      </div>
      <button type="submit"><i class="material-icons">search</i></button>
    </div>
  </form>
  <ul>
    {% for user in users %}
      <li>
        <a href="user/{{user.id}}" class="main-text">{% if user.isAdmin %}<strong>{% endif %}{{user.email}}{% if user.isAdmin %}</strong>{% endif %}<small> - seit {{user.createdAt}}</small></a>
      </li>
    {% endfor %}
  </ul>
  Seiten:
  {% for p in 1..pageCount %}
    {% if loop.index == pageIndex %}
      <strong>{{p}}</strong>
    {% else %}
      <a href="?page={{p}}">{{p}}</a>
    {% endif %}
  {% endfor %}
{% endblock %}

