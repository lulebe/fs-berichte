{% extends "app/admin/adminuserbase.twig" %}

{% block admincontent %}
  <h1>Nutzer</h1>
  <form method="get">
    <div class="input-btn-block">
      <div class="inputlabel">
        <label for="usersearchinput">Nutzersuche</label>
        <input type="search" name="searchUser" id="usersearchinput" value="{{searchQuery}}" placeholder="E-Mailadresse">
      </div>
      <button type="submit"><i class="material-icons">search</i></button>
    </div>
  </form>
  <ul class="striped">
    {% for user in users %}
      <li>
        <a href="user/{{user.id}}" class="main-text">{% if user.isAdmin %}<strong>{% endif %}{{user.email}}{% if user.isAdmin %}</strong>{% endif %}{% if user.nickname %} ({{user.nickname}}){% endif %} <small style="white-space: nowrap;">- seit {{user.createdAtReadable}}</small></a>
      </li>
    {% endfor %}
  </ul>
  Seiten:
  {% for p in 1..pageCount %}
    {% if loop.index == pageIndex %}
      <strong>{{p}}</strong>
    {% else %}
      <a href="?page={{p}}">{{p}}</a>
    {% endif %}
  {% endfor %}
{% endblock %}

