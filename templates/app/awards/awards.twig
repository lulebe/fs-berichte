{% extends "app/appbase.twig" %}

{% block title %}PaLMe{% endblock %}

{% block content %}
<div class="wrapper narrow">
  <h1>PaLMe</h1>
  <p>{{awardDescription}}</p>
  {% for award in awards %}
  <a href="/app/awards/{{award.id}}" class="block mb" {% if award.status is same as(0) %}style="opacity: 0.5"{% endif %}>
    <div class="card">
      <h3>{{award.title}}</h3>
      <p class="usertext" style="white-space: pre">{{award.description}}</p>
    </div>
  </a>
  {% endfor %}
  {% if awards|length == 0 %}
    <div class="no-content">
      <img src="/assets/desert.png" style="opacity: 0.3;"><br><br>
      Derzeit gibt es keine PaLMen.
    </div>
  {% endif %}
</div>
{% endblock %}

{% block js %}
{% endblock %}